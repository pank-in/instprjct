{{> header}}
<div class="container-fluid">

  <div id="editor" class="editor">
    <div class="editor-canvas-container">
      <i class="fa fa-spinner fa-4x fa-spin"></i>
    </div>

    <label class="editor-uploader" title="Upload picture">
      <span class="editor-uploader__inner">
        <i class="fa fa-picture-o"></i>
        <i class="fa fa-plus"></i>
      </span>
      <input type="file" accept="image/*">
    </label>

    <div class="editor-presets">
      <div class="editor-presets__track">
        {{#each filters}}
        <button
          class="editor-presets__item"
          data-filter="{{ this }}"
          style="background-image:url('img/filters/{{ this }}.png')">
          <span>{{ decamelize this }}</span>
        </button>
        {{/each}}
      </div>
    </div>

    <div class="f f-gap-1 u-mt-2">
      <button class="editor-reset btn btn-default btn-block">Reset</button>
      <button class="editor-upload btn btn-success btn-block">
        <i class="fa fa-upload"></i> <span>Upload</span>
      </button>
    </div>

  </div>

</div>
